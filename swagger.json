  "components": {
    "schemas": {
      "FuncionarioDTO": {
        "required": [
          "nome"
        ],
        "type": "object",
        "properties": {
          "cpf": {
            "type": "integer",
            "description": "CPF do colaborador",
            "format": "int64",
            "nullable": true,
            "example": 20907116043
          },
          "nome": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Nome do colaborador",
            "example": "José Lucas"
          },
          "dataNascimento": {
            "type": "string",
            "description": "Data de nascimento do colaborador (DD-MM-AAAA)",
            "nullable": true,            
            "example": "18-09-1976"
          },
          "nomeSocial": {
            "maxLength": 100,
            "type": "string",
            "description": "Nome do colaborador",
            "nullable": true,
            "example": "José Lucas"
          },
          "email": {
            "maxLength": 200,
            "type": "string",
            "description": "E-mail corporativo do colaborador",
            "nullable": true,
            "example": "example@br.atento.com"
          },
          "cargo": {
            "maxLength": 100,
            "type": "string",
            "description": "Cargo do colaborador",
            "nullable": true,
            "example": "ASSISTENTE/SERVIÇOS (SG3)"
          },
          "cargoSigla": {
            "maxLength": 100,
            "type": "string",
            "description": "Sigla do Cargo do colaborador",
            "nullable": true,
            "example": "E2"
          },
          "empresaNome": {
            "maxLength": 50,
            "type": "string",
            "description": "Nome da empresa do colaborador",
            "nullable": true,
            "example": "Atento"
          },
          "codigoEmpresa": {
            "type": "integer",
            "description": "Código da empresa do colaborador",
            "format": "int32",
            "example": 1
          },
          "departamento": {
            "maxLength": 100,
            "type": "string",
            "description": "Departamento do colaborador",
            "nullable": true,
            "example": "COMERCIAL"
          },
          "ativo": {
            "type": "string",
            "description": "Colaborador Ativo",
            "nullable": true,
            "example": "S"
          },
          "ferias": {
            "type": "string",
            "description": "Colaborador esta de férias",
            "nullable": true,
            "example": "S"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Insira o token JWT no campo abaixo. Exemplo: Bearer {seu_token}",
