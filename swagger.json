    "/api/v1/funcionario": {
      "get": {
        "tags": [
          "Funcionario"
        ],
        "summary": "Consulta Lista de Funcionários",
        "parameters": [
          {
            "name": "Email",
            "in": "query",
            "description": "E-mail corporativo do colaborador (opcional)",
            "schema": {
              "type": "string",
              "format": "email",
              "example": "example@br.atento.com"
            },
            "example": "example@br.atento.com"
          },
          {
            "name": "Cargo",
            "in": "query",
